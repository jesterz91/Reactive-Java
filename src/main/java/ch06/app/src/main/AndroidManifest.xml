<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.jesterz91.rxandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.HelloActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.LoopActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.EventActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.SearchActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AppInfoActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AsyncTaskActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.TimerActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.RestfulActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>